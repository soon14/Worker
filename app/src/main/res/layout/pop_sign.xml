<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_horizontal"
    android:padding="@dimen/dp_16"
    android:background="@drawable/round6_white_bg"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="@color/tv_black"
        android:textSize="@dimen/h3"
        android:text="确认打卡"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tv_desc"
        android:layout_marginTop="@dimen/dp_16"
        android:textSize="@dimen/h5"
        android:textColor="@color/tv_gray"
        android:text="请上传现场上工照片，若发生纠纷，此将做为重要判定依据。"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginTop="@dimen/dp_24"
        android:id="@+id/iv_tack_pic"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_120"
        android:background="@mipmap/ic_tack_pic_work" />


        <EditText
            android:layout_marginTop="@dimen/dp_16"
            android:padding="@dimen/dp_16"
            android:background="@drawable/round6_grayrim_bg"
            android:id="@+id/et_content"
            android:hint="备注信息（15字以内，可不填）"
            android:singleLine="true"
            android:maxLength="15"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="开始上工"
            android:textColor="@color/tv_darkgray"
            android:textSize="@dimen/h5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_confirm"
        android:layout_marginTop="@dimen/dp_16"
        android:text="确认打卡"
        style="@style/DefaultBtnStyle"/>
    <TextView
        android:paddingTop="@dimen/dp_16"
        android:textSize="@dimen/h5"
        android:id="@+id/tv_cancel"
        android:textColor="@color/tv_gray"
        android:text="取消"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>