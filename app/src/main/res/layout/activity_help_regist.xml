<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="clicklistener"
            type="android.view.View.OnClickListener" />
    </data>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.xsd.jx.mine.HelpRegistActivity">
        <include layout="@layout/action_common_bar" android:id="@+id/view_top"/>
        <ScrollView
            android:layout_below="@+id/view_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:padding="@dimen/dp_16"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_top"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_126"
                    android:src="@mipmap/bg_partner_top"
                    />
                <TextView
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="工友手机号"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/h4"
                    />
                <EditText
                    android:id="@+id/et_mobile"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_8"
                    android:padding="@dimen/dp_8"
                    android:background="@drawable/round6_gray_bg"
                    android:singleLine="true"
                    android:maxLength="11"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46"
                    android:hint="请输入工友的手机号"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/h4"
                    />
                <TextView
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="工友手机验证码"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/h4"
                    />
                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_46">
                <EditText
                    android:id="@+id/et_code"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_8"
                    android:background="@drawable/round6_gray_bg"
                    android:singleLine="true"
                    android:maxLength="6"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入工友收到的短信验证码"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/h4"
                    />
                    <TextView
                        android:layout_marginRight="@dimen/dp_3"
                        android:onClick="@{clicklistener}"
                        android:id="@+id/tv_get_code"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/round6_lightblue_bg"
                        android:textColor="@color/white"
                        android:textSize="@dimen/h5"
                        android:text="获取验证码"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_40"/>
                </RelativeLayout>
                <TextView
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="工友姓名"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/h4"
                    />
                <EditText
                    android:id="@+id/et_name"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_8"
                    android:padding="@dimen/dp_8"
                    android:background="@drawable/round6_gray_bg"
                    android:singleLine="true"
                    android:maxLength="11"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46"
                    android:hint="请输入工友的真实姓名"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/h4"
                    />
                <TextView
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="工友身份证号"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/h4"
                    />
                <EditText
                    android:id="@+id/et_idcard"
                    android:digits="1234567890xX"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_8"
                    android:padding="@dimen/dp_8"
                    android:background="@drawable/round6_gray_bg"
                    android:singleLine="true"
                    android:maxLength="18"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46"
                    android:hint="请输入工友的身份证号码"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/h4"
                    />
                <TextView
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="工友的工种（点击可修改）"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/h4"
                    />
                <TextView
                    android:id="@+id/tv_type_work"
                    android:onClick="@{clicklistener}"
                    android:drawableRight="@mipmap/ic_gray_arrow_down_big"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_8"
                    android:padding="@dimen/dp_8"
                    android:background="@drawable/round6_gray_bg"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46"
                    android:hint="工友的工种"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/h4"
                    />
                <TextView
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="工友所属民族（点击可修改）"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/h4"
                    />
                <TextView
                    android:id="@+id/tv_nation"
                    android:onClick="@{clicklistener}"
                    android:drawableRight="@mipmap/ic_gray_arrow_down_big"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_8"
                    android:padding="@dimen/dp_8"
                    android:background="@drawable/round6_gray_bg"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46"
                    android:hint="工友所属民族"
                    android:text="汉族"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/h4"
                    />
                <TextView
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="工友工作年限（点击可修改）"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/h4"
                    />
                <TextView
                    android:id="@+id/tv_work_years"
                    android:onClick="@{clicklistener}"
                    android:drawableRight="@mipmap/ic_gray_arrow_down_big"
                    android:layout_marginBottom="@dimen/dp_80"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_8"
                    android:padding="@dimen/dp_8"
                    android:background="@drawable/round6_gray_bg"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46"
                    android:hint="工友工作年限"
                    android:text="1~5年"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/h4"
                    />



            </LinearLayout>
        </ScrollView>
        <TextView style="@style/DefaultBtnStyle" android:id="@+id/tv_confirm"  android:onClick="@{clicklistener}" android:text="确定帮工友注册" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:layout_marginBottom="@dimen/dp_16"/>
    </RelativeLayout>
</layout>