<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@drawable/round16_whitetop_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:layout_marginTop="@dimen/dp_24"
        android:id="@+id/tv_title"
        android:padding="@dimen/dp_16"
        android:textColor="@color/tv_black"
        android:textSize="@dimen/h2"
        android:drawableRight="@mipmap/ic_black_close"
        android:gravity="center"
        android:text="湖北省"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:paddingTop="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_city"
            android:gravity="center"
            android:background="@drawable/round6_grayrim_bg"
            android:textSize="@dimen/h4"
            android:textColor="@color/black"
            tools:text="武汉市"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_56"/>
        <TextView
            android:layout_marginLeft="@dimen/dp_8"
            android:id="@+id/tv_district"
            android:gravity="center"
            android:background="@drawable/round6_grayrim_bg"
            android:textSize="@dimen/h4"
            android:textColor="@color/black"
            tools:text="江岸区"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_56"/>

    </LinearLayout>
    <EditText
        android:maxLength="30"
        android:id="@+id/et_addr"
        android:textSize="@dimen/h4"
        android:gravity="top"
        android:minHeight="@dimen/dp_240"
        android:layout_margin="@dimen/dp_8"
        android:padding="@dimen/dp_8"
        android:background="@drawable/round6_grayrim_bg"
        android:hint="详情地址描述"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView style="@style/DefaultBtnStyle" android:text="确定" android:id="@+id/tv_confirm" android:layout_margin="@dimen/dp_32" android:layout_gravity="center"/>
</LinearLayout>