<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.xsd.jx.job.JobPriceInquireActivity">
        <include layout="@layout/action_common_bar"/>
        <LinearLayout
            android:id="@+id/layout_search"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/h6"
            android:background="@drawable/round6_gray_bg"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">
            <TextView
                android:maxEms="10"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLines="1"
                android:id="@+id/tv_addr"
                android:textSize="@dimen/h5"
                android:drawablePadding="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_10"
                android:drawableRight="@mipmap/ic_black_arrow_down"
                android:textColor="@color/black"
                tools:text="湖北省-武汉市湖北省-武汉市"
                android:text="湖北省-武汉市"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginLeft="@dimen/dp_8"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:maxLength="18"
                android:id="@+id/et_search"
                android:background="@color/transparent"
                android:textSize="@dimen/h5"
                android:hint="快速搜索工种价格"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_search"
                android:paddingRight="13dp"
                android:paddingLeft="@dimen/dp_10"
                android:gravity="center"
                android:background="@drawable/round_blue_bg"
                android:textSize="@dimen/h5"
                android:layout_marginRight="@dimen/dp_6"
                android:drawablePadding="@dimen/dp_4"
                android:drawableLeft="@mipmap/ic_white_search"
                android:textColor="@color/white"
                android:text="搜索"
                android:layout_width="@dimen/dp_74"
                android:layout_height="@dimen/dp_33"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</layout>