<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/round6_white_bg"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_title"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="报名上工提醒"
        android:textColor="#ff343434"
        android:textSize="@dimen/h3"
        />
    <TextView
        android:padding="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dp_8"
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提醒信息"
        android:textColor="#ff9a9a9a"
        android:textSize="@dimen/h4"
        />
    <View style="@style/h_line" android:layout_marginTop="@dimen/dp_16"/>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textColor="@color/tv_gray"
            android:background="@color/transparent"
            android:id="@+id/tv_cancel"
            style="@style/DefaultBtnStyle"
            android:text="取消"
            />
        <TextView
            android:background="@drawable/rightbottom_round6_blue_bg"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/tv_confirm"
            style="@style/DefaultBtnStyle"
            android:text="确认"
            />
    </LinearLayout>


</LinearLayout>