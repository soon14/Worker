<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:paddingBottom="@dimen/dp_16"
    android:background="@drawable/round6_white_bg"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            tools:visibility="visible"
            android:visibility="visible"
            android:id="@+id/iv_left"
            android:padding="@dimen/dp_16"
            android:src="@mipmap/ic_back"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
        <TextView
            android:textColor="@color/tv_black"
            android:padding="@dimen/dp_8"
            android:textSize="@dimen/h1"
            android:gravity="center"
            android:text="2020年"
            android:id="@+id/tv_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            tools:visibility="visible"
            android:visibility="invisible"
            android:id="@+id/iv_right"
            android:padding="@dimen/dp_16"
            android:src="@mipmap/ic_gray_arrow_right"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
    </LinearLayout>

    <com.haibin.calendarview.CalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_600"
        android:background="#fff"
        app:month_view_show_mode="mode_fix"
        app:current_month_text_color="#333333"
        app:current_month_lunar_text_color="#CFCFCF"
        app:min_year="2019"
        app:max_year="2020"
        app:week_start_with="mon"
        app:other_month_text_color="#e1e1e1"
        app:other_month_lunar_text_color="#e1e1e1"
        app:scheme_text="假"
        app:scheme_text_color="#3C78FF"
        app:scheme_theme_color="#128c4b"
        app:selected_lunar_text_color="#ffffff"
        app:year_view="com.xsd.jx.custom.CustomYearView"
        app:month_view="com.xsd.jx.custom.MeiZuMonthView"
        app:week_view="com.xsd.jx.custom.MeizuWeekView"
        app:selected_text_color="#ffffff"
        app:selected_theme_color="#3C78FF"
        app:week_background="#fff"
        app:week_text_color="#111"
        app:year_view_day_text_color="#333333"
        app:year_view_day_text_size="9sp"
        app:year_view_month_text_color="#ff0000"
        app:year_view_month_text_size="20sp"
        app:year_view_scheme_color="#f17706"/>
</LinearLayout>