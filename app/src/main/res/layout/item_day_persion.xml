<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.xsd.jx.bean.DayPersionBean" />
    </data>

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70">
            <TextView
                android:textSize="@dimen/h4"
                android:textColor="@color/tv_black"
                android:gravity="center"
                android:text="2020-10-19"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:textSize="@dimen/h4"
                android:textColor="@color/tv_black"
                android:gravity="center"
                android:text="是"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="@dimen/h4"
                    android:layout_centerInParent="true"
                    android:textColor="@color/tv_black"
                    android:id="@+id/tv_num"
                    android:gravity="center"
                    tools:text="5"
                    android:text="@{item.num+``}"
                    android:layout_width="@dimen/dp_64"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_marginRight="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:id="@+id/tv_edit"
                    android:gravity="center"
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_28"
                    android:background="@drawable/ring_orange_bg"
                    android:text="改"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/h4" />
            </RelativeLayout>

        </LinearLayout>
        <View style="@style/h_line" android:layout_marginLeft="16dp" android:layout_marginRight="16dp"/>
    </LinearLayout>
</layout>