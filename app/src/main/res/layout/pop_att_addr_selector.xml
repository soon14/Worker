<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round6_whitebottom_bg"
    android:orientation="vertical">
    <View style="@style/h_line" android:layout_marginTop="@dimen/dp_16"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
       >

        <LinearLayout
            android:id="@+id/layout_province"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_province"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_32"
                android:gravity="center"
                android:text="湖北省"
                android:textColor="@color/tv_blue"
                android:textSize="@dimen/h4" />

            <View
                android:id="@+id/view_province"
                android:layout_width="32dp"
                android:layout_height="@dimen/dp_3"
                android:background="@color/tv_blue" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_32"
                android:gravity="center"
                android:textColor="@color/tv_gray"
                android:textSize="@dimen/h4"
                tools:text="武汉市" />

            <View
                android:id="@+id/view_city"
                android:layout_width="32dp"
                android:layout_height="@dimen/dp_3"
                android:background="@color/tv_blue"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginBottom="@dimen/dp_16"
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>